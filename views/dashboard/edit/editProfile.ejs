<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <% var user = locals.user; var info = locals.info%>
    <h1><%=info.name%></h1>
       <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href = "/editEntry" type = "button" class = "btn btn-warning btn-small"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                </svg> Edit Password
            </a>
        </div>
    </div>
</div>
                   
<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/profile">Profile</a></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Last Updated : <%= new Date(user.updatedAt).toUTCString() %></b><br>  
            <b>User ID : <%= user._id %></b>   
        </div>
    </div>
</div>    

<form action = "/editProfile" method = "POST"> 
    <div class="row form-group mb-4" style = "width : 700px; padding-top: 20px; padding-left: 40px;">
        <div class="col" >
            <label for = "firstname">First Name</label>
            <input type = "text" class = "form-control" id = "firstname" name = "firstname" value = "<%= user.firstName %>" placeholder = "" required>
            
       </div>  
       <div class="col" >
            <label for = "lastname">Last Name</label>
            <input type = "text" class = "form-control" id = "lastname" name = "lastname" value = "<%= user.lastName %>" placeholder = "" required>
       </div> 
    </div>
    
    <div class="row form-group mb-4" style = "width : 700px; padding-top: 20px; padding-left: 40px;">
       <div class="col" >
            <label for = "name">Email</label>
            <input type = "text" class = "form-control" id = "email" name = "email" value = "<%= user.email %>" placeholder = "" required>
            <div class = "error" style = "color : red;"><%=info.error.email %></div>
        </div>
        <div class="col" >
             <label for = "name">Total Amount </label>
             <input type = "text" class = "form-control" id = "amount" name = "amount" value = "<%= user.totalAmount %>" placeholder = "" required>
             <div class = "error" style = "color : red;"><%=info.error.amount %></div>
         </div>  
    </div>
    <div class = "form-group mb-4" style = "width : 700px; padding-left : 40px;">
        <button type="submit" class = "btn btn-primary">Edit <%=info.page %></button>
    </div>
</form> 